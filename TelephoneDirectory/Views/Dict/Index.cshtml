
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <style>
        table {
            border-collapse: collapse;
            width: 300px;
        }

        td {
            padding: 3px;
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <div>
        <h3>Телефонный справочник</h3>
        <table>
            <tr>
                <td><p>Фамилия</p></td>
                <td><p>Телефон</p></td>
            </tr>
            @foreach (var item in ViewBag.PhoneRecords)
            {
                <tr>
                    <td><p>@item.LastName</p></td>
                    <td><p>@item.PhoneNumber</p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
